CalcGridLayout:
    id: calculator

<CustButton@Button>:
    font_size: 32




<CalcGridLayout>:
    id: calculator
    display: entry
    rows: 6
    padding: 10
    spacing: 10

    BoxLayout:
        TextInput:
            id: entry
            font_size: 32
            multiline: False

    BoxLayout:
        spacing: 10
        CustButton:
            text: 'sin'
            on_press: entry.text = calculator.getVal(entry.text, self.text)
        CustButton:
            text: 'ln'
            on_press: entry.text = calculator.getVal(entry.text, self.text)
        CustButton:
            text: 'x'u"\u207f"
            on_press: entry.text = calculator.getVal(entry.text, self.text)
        CustButton:
            text: 'C'
            on_press: entry.text = calculator.getVal(entry.text, self.text)
        CustButton:
            text: '+/-'
            on_press: entry.text = calculator.getVal(entry.text, self.text)
        CustButton:
            text: '%'
            on_press: entry.text = calculator.getVal(entry.text, self.text)
        CustButton:
            text: 'DEG'
            on_press: self.text = calculator.modes(self.text)
        CustButton:
            text: 'DEL'
            on_press: entry.text = calculator.getVal(entry.text, self.text)

    BoxLayout:
        spacing: 10
        CustButton:
